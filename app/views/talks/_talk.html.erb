<li id="talk-<%= talk.id %>">
    <% if talk.messages.any? %>
        <span class="user">
            <% talk.members.each do |member| %> 
                <% if talk.messages.any?  && member != current_user %>
                    <%= gravatar_for(member, size: 50) %>
                    <%= talk.messages.first.user.name %>
                <% end %>
            <% end %>
        </span>
        <span class="content">
            <%= talk.messages.first.content if talk.messages.any? %>
        </span>
        <span class="timestamp">
            Posted <%= time_ago_in_words(talk.messages.first.created_at) %> ago.
        </span>
        <%= link_to "view all", "#" %>
    <% end %>
</li>