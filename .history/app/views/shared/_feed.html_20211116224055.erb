<% if @feed_items.any? %>
  <%= form_with(url: root_path, scope: :search,
                                method: :get,
                                local: true) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control' %>

    <%= f.submit "search feed", class: "btn btn-primary" %>

  <% end %>
  <ol class="microposts">
    <%= render @feed_items %>
  </ol>
  <%= will_paginate @feed_items, params:{ controller: :static_pages, action: :home } %>
<% end %>