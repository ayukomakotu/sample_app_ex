<header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "sample app", root_path, id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <div class="dropdown">
              <a href="#" class="btn btn-default" data-toggle="dropdown" role="button" aria-expanded="false">
                ドロップダウン
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Home",    root_path %></li>
                <li><%= link_to "Help",    help_path %></li>
                <% if logged_in? %>
                  <li><%= link_to "Users", users_path %></li>
                  <li class="dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                      Acount
                      <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                    <%# コメント　current_user => user_path(current_user.id)の省略 %>
                    <%# コメント　GET /users/:id に飛ぶ %>
                      <li><%= link_to "Profile", current_user %></li> 
                      <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                      <li class="divider"></li>
                      <li> 
                        <%= link_to "Log out", logout_path, method: :delete %> 
                        <%# コメント　DELETE /logout => destroy action %>
                        <%# コメント　link_toメソッドはデフォルトではGETをリクエスト %>
                      </li>
                    </ul>
                  </li>
                <% else %>
                  <li><%= link_to "Log in", login_path %></li>
                <% end %>
              </ul>
            </div>
          </ul>
        </nav>
      </div>
</header>